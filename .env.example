# 环境变量配置文件示例
# 请复制此文件为 .env 并填写实际的配置信息
# 注意：此文件仅作为模板，实际配置请勿提交到版本控制

# 微信Token
WECHAT_TOKEN=your_wechat_token_here

# MySQL 配置
MYSQL_HOST=localhost
MYSQL_DATABASE=wechat_ai
MYSQL_USER=wechat_user
MYSQL_PASSWORD=your_mysql_password_here
MYSQL_CHARSET=utf8mb4

# Redis 配置
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# 文件路径配置
GENERATED_HTML_DIR=generated_html/
BASE_GENERATED_HTML=https://your-domain.com/we_chat/ticket/

# DeepSeek API
DEEPSEEK_API_KEY=your_deepseek_api_key_here

# 天气API配置
WEATHER_PRIVATE_KEY=your_private_key_here
WEATHER_API_HOST=your_weather_api_host_here
WEATHER_SUB_ID=your_weather_sub_id_here
WEATHER_KEY_ID=your_weather_key_id_here
